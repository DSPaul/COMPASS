<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:COMPASS.Common.ViewModels.Modals"
             xmlns:views="using:COMPASS.Common.Views"
             xmlns:controls="using:COMPASS.Common.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="250"
             x:Class="COMPASS.Common.Views.Modals.TagEditView"
             x:DataType="vm:TagEditViewModel">
    <StackPanel Orientation="Horizontal" Spacing="20">
        <views:TagEditBasicView/>
        <Rectangle Fill="{StaticResource Separator}" Width="3"/>
        <Border Background="{StaticResource Layer2}" Margin="0,10" 
                CornerRadius="5" MaxHeight="170" VerticalAlignment="Top">
            <Grid RowDefinitions="Auto, Auto, *" Margin="0,10">
                <StackPanel Orientation="Horizontal" Margin="10,5" Grid.Row="0">
                    <TextBlock Text="Folder/URL links"/>
                    <!-- TODO add explainer -->
                </StackPanel>
                <Rectangle Grid.Row="1" Fill="{StaticResource Separator}" Height="3"/>
                <controls:StringListControl Grid.Row="2" Items="{Binding TempTag.LinkedGlobs}" 
                                            Width="300" Margin="5" />
            </Grid>
        </Border>
    </StackPanel>
</UserControl>
