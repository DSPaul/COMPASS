<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:COMPASS.Common.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:COMPASS.Common.Views"
        xmlns:system="using:System"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        x:Class="COMPASS.Common.Views.Windows.MainWindow"
        ExtendClientAreaTitleBarHeightHint="45"
        Closing="Window_Closing"
        Title="COMPASS" Background="{StaticResource WindowBackground}">
  <Window.Styles>
    <Style Selector="CaptionButtons">
      <Setter Property="MaxHeight" Value="{Binding $parent[Window].ExtendClientAreaTitleBarHeightHint}"/>
    </Style>
    <Style Selector="CaptionButtons Button">
      <Setter Property="Height" Value="{Binding $parent[Window].ExtendClientAreaTitleBarHeightHint}"/>
    </Style>
  </Window.Styles>

  <Grid Margin="{Binding $parent[Window].OffScreenMargin}">
    <!-- Title bar background -->
    <Border Background="{StaticResource TitlebarBackground}"
            VerticalAlignment="Top"
            Height="{Binding $parent[Window].ExtendClientAreaTitleBarHeightHint}"
            IsHitTestVisible="False"/>
      <views:MainView />
  </Grid>

</Window>
