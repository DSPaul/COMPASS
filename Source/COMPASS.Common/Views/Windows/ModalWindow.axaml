<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="using:COMPASS.Common.Views.Modals"
        xmlns:vm="using:COMPASS.Common.ViewModels.Modals"
        xmlns:importVm="using:COMPASS.Common.ViewModels.Modals.Import"
        xmlns:interfaces="using:COMPASS.Common.Interfaces"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        MinWidth="{Binding WindowWidth}" 
        MinHeight="{Binding WindowHeight}"
        Background="{StaticResource WindowBackground}"
        WindowStartupLocation="CenterOwner"
        SizeToContent="WidthAndHeight"
        Focusable="True"
        x:Class="COMPASS.Common.Views.Windows.ModalWindow"
        x:DataType="interfaces:IModalViewModel"
        Title="{Binding WindowTitle}">
    
    <Window.DataTemplates>
        <DataTemplate DataType="vm:TagEditViewModel">
            <views:TagEditView/>
        </DataTemplate>
        
        <DataTemplate DataType="vm:CodexEditViewModel">
            <views:CodexEditView/>
        </DataTemplate>
        
        <DataTemplate DataType="importVm:ImportURLViewModel">
            <views:ImportURLView/>
        </DataTemplate>
    </Window.DataTemplates>
    
    <ContentControl Content="{Binding}" Margin="10"/>
    
</Window>
